{
    "name": "contract",
    "version": "1.0.0",
    "description": "Write validators in the `validators` folder, and supporting functions in the `lib` folder using `.ak` as a file extension.",
    "main": "src/index.ts",
    "type": "module",
    "directories": {
        "lib": "lib"
    },
    "scripts": {
        "mint": "node --loader ts-node/esm src/services/mint.ts",
        "burn": "node --loader ts-node/esm src/services/burn.ts",
        "update": "node --loader ts-node/esm src/services/update.ts",
        "remove": "node --loader ts-node/esm src/services/remove.ts",
        "mint:lucid": "node --loader ts-node/esm src/services/lucid/mint.ts",
        "mint:mesh": "node --loader ts-node/esm src/services/mesh/mint.ts",
        "burn:mesh": "node --loader ts-node/esm src/services/mesh/burn.ts",
        "update:mesh": "node --loader ts-node/esm src/services/mesh/update.ts",
        "test:mint": "node --loader ts-node/esm src/test/mint.ts",
        "test:send": "node --loader ts-node/esm src/test/send.ts",
        "mint:release": "node --loader ts-node/esm src/release/mint.ts",
        "burn:release": "node --loader ts-node/esm src/release/burn.ts",
        "update:release": "node --loader ts-node/esm src/release/update.ts",
        "remove:release": "node --loader ts-node/esm src/release/remove.ts",
        "offchain": "node --loader ts-node/esm src/test/offchain.ts",
        "dev": "npx nodemon",
        "build": "rimraf ./dist && tsc && tsc-alias",
        "start": "node dist/index.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prettier": "prettier --check .",
        "prettier:fix": "prettier --write ."
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@meshsdk/core": "^1.7.4",
        "@meshsdk/core-csl": "^1.7.4",
        "@types/dotenv": "^6.1.1",
        "cbor": "^9.0.2",
        "cbor-x": "^1.6.0",
        "lucid-cardano": "^0.10.10"
    },
    "devDependencies": {
        "@types/jest": "^29.5.13",
        "@typescript-eslint/eslint-plugin": "^8.6.0",
        "@typescript-eslint/parser": "^8.6.0",
        "@typescript-eslint/typescript-estree": "^8.6.0",
        "dotenv": "^16.4.5",
        "eslint": "^9.10.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "jest": "^29.7.0",
        "prettier": "^3.3.3",
        "rimraf": "^5.0.10",
        "ts-jest": "^29.2.5",
        "node --loader=ts-node/esm": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.6.2"
    }
}
